<form action="" method="post">
  <h1>Add new product</h1>
  Name: <input type="text" name="name" id="" required>
  <br><br>
  Price: <input type="number" name="price" id="" required>
  <br><br>
  Image: <input type="url" name="image" id="" required>
  <br><br>
  Category:
  <select name="category" id="">
    {{#each categoryList }}
    <option value="{{_id}}">
      {{ name }}
    </option>
    {{/each}}
  </select>
  <input type="submit" value="Add">
</form>